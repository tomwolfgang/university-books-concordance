<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
  </startup>
  <appSettings>
    <add key="storage_folder" value="d:/release/txt files/storage/"/>
    <add key="connection_string" value="server=localhost;userid=root;password=1234;database=books"/>

    <!-- content_retreival_res_lines: true for lines, false for sentences -->
    <add key="content_retreival_res.lines" value="false"/>

    <!-- how many lines, before and after, the word we should retrieve -->
    <add key="content_retreival_res.delta" value="1"/>

    <!-- 
      when true, we perform itegrity validations when inserting documents 
      into the database - this is mainly good for debugging, because it will 
      severly hurt document insertion performance
    -->
    <add key="perform_integrity_validations" value="false"/>

    <add key="statistics.word_frequencies.limit" value="50"/>
  </appSettings>
</configuration>